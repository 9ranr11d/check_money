<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:id="@+id/linear_layout_setting_group_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계 관리"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_setting_book_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_setting_change_the_book"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="변경"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_setting_add_meeting"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="계모임 추가"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_setting_delete_meeting"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="계모임 삭제"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_setting_export"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_setting_theme"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="내보내기"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_setting_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_setting_group_management"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/radio_group_setting_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_button_setting_light_theme"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Light theme"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_button_setting_dark_theme"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Dark theme"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_button_setting_default_theme"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Default theme"
                android:textSize="15sp" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>